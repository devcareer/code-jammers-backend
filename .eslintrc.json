{ 
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "linebreak-style": ["error", "windows"],
      "quotes": ["error", "double"],
      "semi": ["error", "always"],
      "no-unused-vars":"off",
      "no-undef":"off",
      "no-tabs":"off",
      "no-console": "off",
      "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    }
  }
  