{
  "openapi": "3.0.1",
  "info": {
    "title": "User CRUD API",
    "description": "This API handles the following for a user:\n- sign up\n-  sign in\n-  verify\n-  password recovery/reset\n-  profile update             ",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://know-africa.herokuapp.com"
    }
  ],
  "paths": {
    "/api/v1/user-profile": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Update user profile",
        "description": "This allows a signed in user to update their profile.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "lastName": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "0": {
                  "value": "{\n    \"lastName\": \"Ebunoluwa\",\n    \"firstName\": \"Ada\"\n}"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully updated user's profile."
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/users/reset/6e090ed8-99c8-4049-b0ac-83253af15697/eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..-P5o5W6Dft1urpVuCIkb4Dl-dhisdI_iI2mYNGmy6UM": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Reset user password",
        "description": "This allows a registered user reset their password.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "newPassword": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "0": {
                  "value": "{\n    \"newPassword\": \"123456\"\n}"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset successful."
          },
          "404": {
            "description": "Email address not associated with any account."
          },
          "410": {
            "description": "Reset link expired."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/users/recover": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Recover password",
        "description": "This allows a registered user recover their password.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "0": {
                  "value": "{\n  \"email\": \"kerimik670@akxpert.com\"\n}"
                },
                "1": {
                  "value": "{\n  \"email\": \"gh20@jqjlb.com\"\n}"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Reset email has been sent."
          },
          "403": {
            "description": "User account is not verified."
          },
          "404": {
            "description": "Email address not associated with any account."
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/users/signup/verify/jayov14420@jqjlb.com": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Verify User.",
        "description": "This verifies a registered user.",
        "responses": {
          "200": {
            "description": "User email successfully verified."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/users/signin": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "User sign in",
        "description": "This allows a registered user to sign in.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "0": {
                  "value": "{\n  \"email\": \"jayov14420@jqjlb.com\",\n  \"password\": \"12345\"\n}"
                },
                "1": {
                  "value": "{\n  \"email\": \"jayov14420@jqjlb.com\"\n}"
                },
                "2": {
                  "value": "{\n  \"email\": \"janer@gmail.com\",\n  \"password\": \"12345\"\n}"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully logged in."
          },
          "400": {
            "description": "Email/Password is required."
          },
          "404": {
            "description": "Email/Password not found."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/users/signup": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Register user",
        "description": "This allows a user sign up on Know Africa.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "0": {
                  "value": "{\n    \"username\": \"NewUser1\",\n    \"email\": \"jayov14420@jqjlb.com\",\n    \"password\": \"12345\"\n}"
                },
                "1": {
                  "value": "{\n    \"username\": \"SecondUser\",\n    \"email\": \"jayov14420@jqjlb.com\",\n    \"password\": \"12345\"\n}"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully created."
          },
          "409": {
            "description": "Username/Email already used by another user."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/": {
      "get": {
        "tags": [
          "homepage"
        ],
        "summary": "Homepage",
        "description": "Know Africa's Homepage",
        "responses": {
          "200": {
            "description": "Success."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}