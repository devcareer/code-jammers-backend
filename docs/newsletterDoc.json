{
  "openapi": "3.0.1",
  "info": {
    "title": "Newsletter CRUD API",
    "description": "This API handles the following:\n- list all subscribers including nesletters they have received.\n- subscription to the newsletter\n- subscriber verification\n- creation of newletter by Admin user\n- unsubsription from the newsletter                           \n",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://know-africa.herokuapp.com"
    }
  ],
  "paths": {
    "/api/v1/newsletter/unsubscribe/jayov14420@jqjlb.com": {
      "get": {
        "tags": [
          "newsletter"
        ],
        "summary": "Unsubscribe",
        "description": "This allows a user to unsubscribe.",
        "responses": {
          "200": {
            "description": "User successfully unsubscribed."
          },
          "404": {
            "description": "Subscriber not found."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/newsletter/admin/create_newsletter": {
      "post": {
        "tags": [
          "newsletter"
        ],
        "summary": "Create newsletter",
        "description": "This allows an Admin user create a newsletter.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "0": {
                  "value": "{\n  \"title\": \"What is Lorem Ipsum?\",\n  \"message\": \"Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.\"\n}"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Newsletter successfully created."
          },
          "400": {
            "description": "Validation error."
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/subscriber/verify/jayov14420@jqjlb.com": {
      "get": {
        "tags": [
          "newsletter"
        ],
        "summary": "Verify subscriber",
        "description": "Verifies that the user has been subscribed.",
        "responses": {
          "200": {
            "description": "Subscriber's email successfully verified."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/newsletter/subscribe": {
      "post": {
        "tags": [
          "newsletter"
        ],
        "summary": "Subscribe user",
        "description": "This allows a user to subscribe to the newsletter.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "0": {
                  "value": "{\n  \"firstName\": \"Ebunoluwa\",\n  \"email\": \"jayov14420@jqjlb.com\"\n}"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully subscribed."
          },
          "409": {
            "description": "User is already subscribed to this newsletter."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    },
    "/api/v1/newsletter/subscribers": {
      "get": {
        "tags": [
          "newsletter"
        ],
        "summary": "Get all subscribers",
        "description": "This returns an array of all subscribers.",
        "responses": {
          "200": {
            "description": "Subscribers successfully retrieved."
          },
          "404": {
            "description": "No subscribers found."
          }
        },
        "servers": [
          {
            "url": "https://know-africa.herokuapp.com"
          }
        ]
      },
      "servers": [
        {
          "url": "https://know-africa.herokuapp.com"
        }
      ]
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}